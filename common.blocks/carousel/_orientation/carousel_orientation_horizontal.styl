.carousel_orientation_horizontal .carousel__item {
  transition: 0.6s ease-in-out left;

  &_state_active {
    left: 0;
    &.carousel__item_dir {
      &_left {
        left: -100%;
      }
      &_right {
        left: 100%;
      }
    }
  }

  &_type {
    &_next {
      left: 100%;
      &.carousel__item_dir_left,.carousel__item_type_prev.carousel__item_dir_right {
        left: 0;
      }
    }
    &_prev {
      left: -100%;
    }
  }
}