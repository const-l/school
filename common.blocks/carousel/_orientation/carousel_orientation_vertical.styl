.carousel_orientation_vertical .carousel__item {
  transition: 0.6s ease-in-out top;

  &_state_active {
    top: 0;
    &.carousel__item_dir {
      &_top {
        top: -100%;
      }
      &_bottom {
        top: 100%;
      }
    }
  }

  &_type {
    &_next {
      top: 100%;
      &.carousel__item_dir_top,.carousel__item_type_prev.carousel__item_dir_bottom {
        top: 0;
      }
    }
    &_prev
      top: -100%;
  }
}