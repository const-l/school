.list__item
  margin 0 0 3px 0;
  padding 0;
  &_level
    .nav &_1
      &:hover .list
        visibility: visible;
        opacity: 1;
      & .list
        visibility: hidden;
        opacity: 0;
        z-index: 999999;
        position: absolute;
        width: 200px;
        text-transform: none;
    &_2 .link
      padding-left 35px;
    .nav &_2
      width: 100%;
      & .link
        background-color: rgba(0, 0, 0, 0.6);
        display: block;
        margin: 0;
        padding: 10px 15px;
        border: solid rgba(0, 0, 0, 0.6);
        border-width: 0 0 1px 0;
        &_hovered,
        &_active
          background-color: #7EB347;
    &_3 .link
      padding-left 55px;
  .nav &
    margin-bottom: 0;
    display: inline-block;